<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:id="@+id/mobile_navigation"
   app:startDestination="@id/heroes_list_fragment">
   <fragment
      android:id="@+id/heroes_list_fragment"
      android:name="com.ibanarriola.marvelheroes.view.fragments.HeroesListFragment"
      android:label="fragment_heroes_list_fragment"
      tools:layout="@layout/fragment_heroes_list" >
      <action
         android:id="@+id/action_heroes_list_fragment_to_fragment_hero_details"
         app:destination="@+id/fragment_hero_details"
         app:enterAnim="@anim/animation_enter"
         app:exitAnim="@anim/animation_leave"
         app:popEnterAnim="@anim/animation_back_enter"
         app:popExitAnim="@anim/animation_back_leave" />
   </fragment>
   <fragment
      android:id="@+id/fragment_hero_details"
      android:name="com.ibanarriola.marvelheroes.view.fragments.HeroDetailsFragment"
      android:label="fragment_hero_details"
      tools:layout="@layout/fragment_hero_detail" />
</navigation>
